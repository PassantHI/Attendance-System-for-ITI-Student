@model LoginViewModel
@{
    
}

<div class="d-flex justify-content-center align-items-center" style="height: 80vh;" >
    
        <form method="post" class="p-4" style="border: 1px solid #ccc; border-radius: 10px; background-color: #f8f9fa;width: 100%; max-width: 400px;">

            <div class="row g-3">
                <div class="row mb-3">
                    <label asp-for="UserEmail" class="col-sm-4 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input asp-for="UserEmail" class="form-control" id="inputEmail3"><span asp-validation-for="UserEmail"></span> <br />
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Password" class="col-sm-4 col-form-label">Password</label>
                    <div class="col-sm-10">
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword3"><span asp-validation-for="Password"></span><br />
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>
        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Register">New User</a>
        </div>
            <partial name="_ValidationScriptsPartial" />
        </form>
    
</div>

